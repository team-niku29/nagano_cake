<h2 class="page-header text-center">注文履歴詳細画面</h2>

<div class="row text-center">
    <h4 class="col-xs-4 text-right">購入者</h4>
    <h4 class="col-xs-8"><%= link_to @order.client_user.family_name+@order.client_user.first_name, admin_client_user_path(@order.client_user_id)%>
    </h4>
    <h4 class="col-xs-4 text-right">配送先</h4>
    <h4 class="col-xs-8"><%= @order.shipping_address %></h4>
    <h4 class="col-xs-4 text-right">支払い方法</h4>
    <h4 class="col-xs-8"><%= @order.payment_flg %></h4>
    <h4 class="col-xs-4 text-right">注文ステータス</h4>
    <h4 class="col-xs-8">
        <%= @order.status_flg %></h4>
    <div class="col-xs-4 text-right"></div>
    <div class="col-xs-8">
        <%= form_for @order, url:admin_client_user_order_path(@order.id) do |f| %>
        <%= f.select :status_flg, Order.status_flgs.keys.to_a %>
        <%= f.submit "更新", class:"btn btn-primary btn-xs" %>
        <% end %>
    </div>
</div>

<br><br>

<div class="row">

    <div class="col-xs-8">
        <table class="table table-striped table-inverse">
            <thead>
                <tr>
                    <th class="col-xs-3">商品名</th>
                    <th class="col-xs-2">単価（税込）</th>
                    <th class="col-xs-1">数量</th>
                    <th class="col-xs-1">小計</th>
                    <th class="col-xs-2">製作ステータス</th>
                    <th class="col-xs-3"></th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                    <td><%= item.name %></td>
                    <td>¥ <%= (item.price*@TAX).ceil %></td>
                    <td><%= item.quantity %></td>
                    <td>¥ <%= (item.price*item.quantity*@TAX).ceil %></td>
                        <%= form_for [@order,item], url:admin_client_user_order_order_item_path(@order.client_user_id,@order.id,item.id) do |f| %>
                        <td><%= item.production_status %></td>
                        <td>
                        <%= f.select :production_status, OrderItem.production_statuses.keys.to_a %>
                        <%= f.submit "更新", class:"btn btn-primary btn-xs" %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="col-xs-4">
    <br><br>
        <h5 class="col-xs-4">商品合計</h5>
        <h4 class="col-xs-8">¥ <%= @total_price.ceil %></h4>
        <h5 class="col-xs-4">送料</h5>
        <h4 class="col-xs-8">¥ <%= @order.charriage %></h4>
        <h5 class="col-xs-4">請求金額合計</h5>
        <h4 class="col-xs-8">¥ <%= @order.billing_amount %></h4>
    </div>
</div>