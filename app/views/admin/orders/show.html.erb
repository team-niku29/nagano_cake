<p class="lead">注文履歴詳細</p>
<div class="row">
    <ul class="dl-horizontal">
        <dt>購入者</dt>
        <dd><%= link_to @order.client_user.family_name+@order.client_user.first_name, admin_client_user_path(@order.client_user_id)%>
        </dd>
        <dt>配送先</dt>
        <dd><%= @order.shipping_address %></dd>
        <dt>支払い方法</dt>
        <dd><%= @order.payment_flg %></dd>
        <dt>注文ステータス</dt>
        <dd><%= form_for @order, url:admin_client_user_order_path(@order.id) do |f| %>
            <%= f.select :status_flg, Order.status_flgs.keys.to_a %>
            <%= f.submit "更新" %>
            <% end %></dd>
    </ul>
</div>

<div class="row">
    <div class="col-xs-8"></div>
    <div class="col-xs-4"></div>
</div>


<div class="item_table">
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @items.each do |item| %>
            <tr>
                <td><%= item.name %></td>
                <td><%= (item.price*$tax).ceil %></td>
                <td><%= item.quantity %></td>
                <td><%= item.price*item.quantity*$tax %></td>
                <td><%= item.production_status %></td>
                <td>
                    <%= form_for [@order,item], url:admin_client_user_order_order_item_path(@order.client_user_id,@order.id,item.id) do |f| %>
                    <%= f.select :production_status, OrderItem.production_statuses.keys.to_a %>
                    <%= f.submit "更新" %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="price_field">
    <h3>商品合計　　　　　　　<%= @total_price %></h3>
    <h3>送料　　　　　　　　　<%= @order.charriage %></h3>
    <h3>請求金額合計　　　　　<%= @order.billing_amount %></h3>
</div>