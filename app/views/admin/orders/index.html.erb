<div class="contents">
    <h1>注文履歴一覧</h1>

    <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_orders_show_path(order.id) %></td>
                <td><%= order.client_user.family_name %><%= order.client_user.first_name %></td>
                <td><%= order.total_quantity %></td>
                <td><%= order.payment_flg %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
