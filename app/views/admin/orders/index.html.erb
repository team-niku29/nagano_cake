<div class="contents">
    <h1>注文履歴</h1>

    <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th></th>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= link_to "移動", admin_orders_show_path(order.id) %>aaaa</td>
                <td><%= order.total_quantity %>bbb</td>
                <td><%= order.payment_flg %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
