<h2 class="page-header text-center">注文履歴一覧画面</h2>

<table class="table table-striped table-inverse">
    <thead>
        <tr>
            <th class="col-xs-2 col text-center">購入日時</th>
            <th class="col-xs-3 col text-center">購入者</th>
            <th class="col-xs-1 col text-center">注文個数</th>
            <th class="col-xs-2 col text-center">注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td class="col text-center"><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admin_client_user_order_path(order.client_user_id ,order.id) %>
            </td>
            <td class="col text-center"><%= order.client_user.family_name %><%= order.client_user.first_name %></td>
            <td class="col text-center"><%= order.total_quantity %></td>
            <td class="col text-center"><%= order.status_flg %></td>
        </tr>
        <% end %>
    </tbody>
</table>
