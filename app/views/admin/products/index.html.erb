<p class="lead">商品一覧</p>

<%= link_to "➕", new_admin_product_path %>

    <table class="table table-striped table-hover table-inverse">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
            <tr>
                <td> <%= product.id %></td>
                <td><%= link_to product.name, admin_product_path(product.id) %></td>
                <td><%= product.price_excluding %></td>
                <td><%= product.genre.name %></td>
                <td>
                <% if product.out_of_stock == false %>
                販売中
                <% else %>
                販売中止
                <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @products %>
