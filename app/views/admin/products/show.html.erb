<h1>商品詳細</h1>
	<div class="row">
		<div class="col-xs-3">
			<%= attachment_image_tag @product.image_id, :image_id, fallback: "no_image.jpg",size: "300x300" %>
		</div>

		<div class="col-xs-9">
			<dl class="dl-horizontal">
				<dt>商品名</dt>
				<dd><%= @product.name %></dd>

				<dt>商品説明</dt>
				<dd><%= @product.introduction %></dd>

				<dt>ジャンル</dt>
				<dd><%= @genre.name %></dd>

				<dt>税込価格（税抜き価格）</dt>
				<dd><%= @product.price_excluding * 1.08 %>(<%= @product.price_excluding %>)</dd>

				<dt>販売ステータス</dt>
				<dd><% if @product.out_of_stock == false %>
					<%= "販売中" %>
				<% else %>
					<%= "販売中止" %>
				<% end %>
				</dd>
			</dl>
		</div>
	</div>

	<%= link_to "編集する", edit_admin_product_path, class: "btn btn-primary" %>