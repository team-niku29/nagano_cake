<h2 class="page-header text-center">商品詳細</h2>
<div class="row">
	<div class="col-xs-4">
		<%= attachment_image_tag @product, :image, :fill, 300, 300, fallback: "no_image.jpg" %>
	</div>

	<div class="col-xs-6">
		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-5">
					<h3>商品名</h3>
				</div>
				<div class="col-xs-4">
					<h3><%= @product.name %></h3>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-5">
					<h3>商品説明</h3>
				</div>
				<div class="col-xs-4">
					<h3><%= @product.introduction %></h3>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-5">
					<h3>ジャンル</h3>
				</div>
				<div class="col-xs-4 text-nowrap">
					<h3><%= @genre %></h3>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-5 text-nowrap">
					<h3>税込価格<br>（税抜き価格）</h3>
				</div>
				<div class="col-xs-4 text-nowrap">
					<h3>¥ <%= (@product.price_excluding * 1.08).ceil %>(<%= @product.price_excluding %>)</h3>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-5 text-nowrap">
					<h3>販売ステータス</h3>
				</div>
				<div class="col-xs-4 text-nowrap">
					<% if @product.out_of_stock == false %>
					<h3><%= "販売中" %></h3>
					<% else %>
					<h3><%= "販売中止" %></h3>
					<% end %>
				</div>
			</div>
		</div>

			<%= link_to "戻る",  admin_products_index_path, class: "btn btn-primary btn-lg pull-left" %>
			<%= link_to "編集する", edit_admin_product_path, class: "btn btn-success btn-lg pull-right" %>
	</div>
</div>