<h2 class="page-header text-center">商品詳細</h2>
<div class="row">
	<div class="col-xs-4">
		<%= attachment_image_tag @product, :image, fallback: "no_image.jpg",size: "300x300" %>
	</div>

	<div class="col-xs-6">
		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4">
					<strong>商品名</strong>
				</div>
				<div class="col-xs-4">
					<%= @product.name %>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4">
					<strong>商品説明</strong>
				</div>
				<div class="col-xs-4 text-nowrap">
					<%= @product.introduction %>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4">
					<strong>ジャンル</strong>
				</div>
				<div class="col-xs-4 text-nowrap">
					<%= @genre %>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4 text-nowrap">
					<strong>税込価格（税抜き価格）</strong>
				</div>
				<div class="col-xs-4 text-nowrap">
					<%= (@product.price_excluding * 1.08).ceil %>(<%= @product.price_excluding %>)
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4 text-nowrap">
					<strong>販売ステータス</strong>
				</div>
				<div class="col-xs-4 text-nowrap">
					<% if @product.out_of_stock == false %>
					<%= "販売中" %>
					<% else %>
					<%= "販売中止" %>
					<% end %>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-4">
					<%= link_to "編集する", edit_admin_product_path, class: "btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>
</div>