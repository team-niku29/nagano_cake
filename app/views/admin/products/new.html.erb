<div class="row">

    <%= form_for @product,:url => {controller: "admin/products", action: "create"} do |f| %>

    <div class="field row">
        <%= f.label :name, '商品名' %>
        <%= f.text_field :name %>
    </div>
    <div class="field row">
        <%= f.label :introduction, '商品説明' %>
        <%= f.text_area :introduction %>
    </div>
    <div class="field row">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.select :genre_id, [["ケーキ","1"], ["クッキー","2"]] %>
    </div>
    <div class="field row">
        <%= f.label :price_excluding, '税抜価格' %>
        <%= f.text_field :price_excluding %>
    </div>
    <div class="field row">
        <%= f.label :out_of_stock, '販売ステータス' %>
        <%= f.select :out_of_stock, [["販売中","falth"], ["販売中止中","truth"]] %>
    </div>

    <div class="actions row">
        <%= f.submit "新規登録" %>
    </div>

    <% end %>

</div>
