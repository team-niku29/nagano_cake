<h2 class="page-header text-center">商品編集</h2>

	<div class="col-xs-4">
		<%= attachment_image_tag(@product, :image, :fill, 300, 300, fallback: "no_image.jpg") %>
	</div>

	<%= form_for @product, url:admin_product_path(@product.id) do |f| %>

	<div class="col-xs-4">
		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-6">
					<h4><%= f.label :商品名 %></h4>
				</div>
				<div class="col-xs-5">
					<h4><%= f.text_field :name, size: "40" %></h4>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-6">
					<h4><%= f.label :商品説明 %></h4>
				</div>
				<div class="col-xs-5">
					<h4><%= f.text_area :introduction, size: "40x10" %></h4>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-6">
					<h4><%= f.label :ジャンル %></h4>
				</div>
				<div class="col-xs-5">
					<h4><%= f.collection_select :genre_id, Genre.all, :id, :name %></h3>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-6">
					<h4><%= f.label :税抜き価格 %></h4>
				</div>
				<div class="col-xs-5 text-nowrap">
					<h4><%= f.text_field :price_excluding %>円</h4>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
				<div class="col-xs-6 text-nowrap">
					<h4><%= f.label :販売ステータス %></h4>
				</div>
			<div class="col-xs-5 text-nowrap">
					<h4><%= f.radio_button :out_of_stock, false %>
			 		<%= f.label :out_of_stock, '販売中', value: false %>
					<%= f.radio_button :out_of_stock, true %>
					<%= f.label :out_of_stock, '販売中止', value: true %></h4>
				</div>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12 col-xs-offset-6">
					<h4><%= f.attachment_field :image %></h4>
			</div>
		</div>

		<div calss="row">
			<div class="col-xs-12">
					<%= f.submit "変更を保存", class: "btn btn-primary btn-lg" %>
			</div>
		</div>
	</div>
<% end %>












