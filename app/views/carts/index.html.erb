
	<div class="col-xs-6">
		<h2>ショッピングカート</h2>

		<%= link_to "カートを空にする",client_user_carts_path, method: :all_delete, data: {confirm: "本当に空にしますか？"}, class: "btn-sm btn-danger" %></td>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @carts.each do |cart| %>
					<tr>
						<td><%= cart.product.name %></td>
						<td><%= (cart.product.price_excluding * $tax).ceil %></td>
						<td><%= cart.quantity %></td>
						<td><%= (cart.product.price_excluding * $tax).ceil * cart.quantity %></td>
						<td><%= link_to "カートから商品を出す",client_user_carts_path(cart), method: :delete %></td>
					</tr>
					<% @total = @total + (cart.product.price_excluding * $tax).ceil * cart.quantity %>
				<% end %>
			</tbody>
		</table>

		<table class="table table-hover table-inverse">
			<tr>
				<td><%= link_to "買い物を続ける", root_path %></td>
				<td></td>
				<td></td>
				<td>合計金額</td>
				<td><%= @total %></td>
			</tr>
		</table>

		<div>
			<%= link_to "情報入力に進む", client_user_address_check_path %>
		</div>

	</div>
