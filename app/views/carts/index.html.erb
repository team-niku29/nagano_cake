
	<div class="col-xs-6">
		<h2>ショッピングカート</h2>

		<td><%= link_to "カートを空にする",@client_user_carts_path, method: :all_destroy %>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @carts.each do |cart| %>
					<tr>
						<td><%= cart.product.name %></td>
						<td><%= @price = (cart.product.price_excluding * @TAX).ceil %></td>
						<%= form_with(model:[@client_user,cart]) do |f| %>
							<td>
								<%= f.select :quantity , [2,3,4,5,6,7,8,9,10], include_blank: "1" %>
								<%= f.submit "変更する" %>
							</td>
						<% end %>
						<td><%= @subtotal = @price * cart.quantity %></td>
						<td><%= link_to "カートから商品を取り出す",@client_user_carts_path, method: :delete %></td>
					</tr>
					<% @total = @total + @subtotal %>
				<% end %>
			</tbody>
		</table>

		<table class="table table-hover table-inverse">
			<tr>
				<td><%= link_to "買い物を続ける", root_path %></td>
				<td></td>
				<td></td>
				<td>合計金額</td>
				<td><%= @total %></td>
			</tr>
		</table>

		<div>
			<%= link_to "情報入力に進む", "/client_users/1/address_check" %>
		</div>

	</div>
