
	<div class="col-xs-9">
		<h2>ショッピングカート</h2>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @carts.each do |cart| %>
					<tr>
						<td><%= cart.product.name %></td>
						<td><%= cart.product.price_excluding %></td>
						<td><%= cart.quantity %></td>
						<td><%= cart.product.price_excluding * cart.quantity %></td>
						<td><%= link_to "Destroy",cart, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<div>
			<%= link_to "買い物を続ける", root_path %>
		</div>

		<table class="table table-hover table-inverse">
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td>合計金額</td>
				<td><%= @total %></td>
			</tr>
		</table>

		<div>
			<%= link_to "情報入力に進む", "/client_users/1/address_check" %>
		</div>

	</div>
