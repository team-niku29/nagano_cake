
<h1>商品紹介</h1>

<div class="row">
	<div class="col-xs-6">

		<table class="table">
			<tr>
				<td>
					<%= link_to (@product) do %>
						<%= attachment_image_tag(@product, :image_id, :fill, 100, 100, fallback: "no_image.jpg") %><br>
					<% end %>
				</td>
				<td>
					<p><%= @product.name %></p>
					<p><%= @product.introduction %></p>
					<p>￥<%= @price %>(税込)</p>
				</td>
			</tr>
		</table>


	</div>
</div>
