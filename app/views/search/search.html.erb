<!--Products 一覧 -->
<table class="table table-hover table-inverse">
    <% if @range == '2' %>

    <h2>Products search for <%= "#{@word}" %> </h2>
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td> <%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product.id) %></td>
            <td><%= product.price_excluding %></td>
            <td><%= product.genre.name %></td>
            <td>
                <% if product.out_of_stock == false %>
                販売中
                <% else %>
                販売中止
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>

    <% else %>
    <h2>Users search for <%= "#{@word}" %> </h2>
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.family_name+user.first_name, admin_client_user_path(user.id) %></td>
            <td><%= user.email %></td>
            <td><% if user.delete_status == true %>
                <%= "退会済み" %>
                <% else %>
                <%= "有効" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    <% end %>
</table>