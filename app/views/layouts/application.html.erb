<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
  <nav class="navbar navbar-default" style="background-color: #222;">
    <div class= "container">
      <nav class="nav navbar-nav navbar-left">
        <span>NaganoCake</span>
      </nav>
      <ul class="nav navbar-nav navbar-right">
        <% if client_user_signed_in? %>
          <li><%= link_to("マイページ", client_user_path(current_client_user.id), {class: "glyphicon glyphicon-home"}) %></li>
          <li><%= link_to("商品一覧", root_path, {class: "glyphicon glyphicon-user"}) %></li>
          <li><%= link_to("カート", client_user_carts_path(current_client_user.id), {class: "glyphicon glyphicon-book"}) %></li>
          <li><%= link_to("ログアウト", destroy_client_user_session_path, { method: :get ,class: "glyphicon glyphicon-log-out"}) %></li>
        <% else %>
          <li> <%= link_to("About", homes_about_path, {class: "glyphicon glyphicon-home"}) %></li>
          <li> <%= link_to("商品一覧", root_path, {class: "glyphicon glyphicon-link"}) %></li>
          <li> <%= link_to("新規登録", new_client_user_registration_path, {class: "glyphicon glyphicon-log-in"}) %></li>
          <li> <%= link_to("ログイン", new_client_user_session_path, {class: "glyphicon glyphicon-edit"}) %> </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <%= flash[:notice] %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
