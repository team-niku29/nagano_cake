<h1>注文履歴詳細</h1>

<div class = "row">
<h3>注文情報</h3>
<table class="table">    
  <tr>
    <td>注文日</td>
    <td> <%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</th>
    <td> <%= @order.shipping_address %></td>
  </tr>
  <tr>
    <td>支払方法</th>
    <td> <%= @order.payment_flg %></td>
  </tr>
  <tr>
    <td>ステータス</th>
    <td> <%= @order.status_flg %></td>
  </tr>
</table>

<div class="row">
  <div class="col-xs-8"></div>
  <div class="col-xs-4"></div>
</div>

<div class= "Billing_information">
  <h3>請求情報</h3>
  <table class="table table-hover">
  <tr>
    <td>商品小計</td>
    <td><%= @total_price %></td>
  <tr>
  <tr>
    <td>送料</td>
    <td><%= @order.charriage %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.billing_amount%></td>
  </tr>
  </table>
</div>

<div class= "order_items">
<h3>注文内容</h3>
    <table class= "table table-hover">

  <% @order_items.each do |item| %>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>請求情報</th>
        <th>注文内容</th>
      <tr>
      <tr>
        <td> <%= item.name %> </td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price * item.quantity  %></td>
      </tr>
    <% end %>
  </table>

</div>