
<div class="text-center">

	<h1 class="page-header">注文履歴一覧</h1>

	<table class="table table-bordered">
			<thead>
				<tr class="info">
					<th class="text-center">注文日</th>
					<th class="text-center">配送先</th>
					<th class="text-center">注文商品</th>
					<th class="text-center">支払金額</th>
					<th class="text-center">ステータス</th>
					<th class="text-center">注文詳細</th>
				</tr>
			</thead>

		<% @orders.each do |order| %>
			<tbody class="order-index">
				<tr>
					<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
					<td><%= order.postal_code %><br>
						<%= order.shipping_address %><br>
						<%= order.shipping_name %><br>
					</td>
					<td><% order.order_items.each do |order_item| %>
						<%= order_item.name %><br>
						<% end %>
					</td>
					<td>￥<%= order.billing_amount %></td>
					<td><%= order.status_flg %></td>
					<td><%= link_to "表示する", client_user_order_path(@client_user,order), class: "btn btn-primary" %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>
