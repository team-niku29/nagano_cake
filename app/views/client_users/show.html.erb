
<div class = "row text-center">
  <h2 class="page-header text-center">マイページ</h2>
    <div class="col-xs-6">
      <table class="table">
          <tr>
            <th class="text-right">氏名：</th>
            <td>
              <%= @client_users.family_name %>
              <%= @client_users.first_name %>
            </td>
          </tr>
          <tr>
            <th class="text-right" >カナ：</th>
            <td>
            <%= @client_users.kana_family_name %>
            <%= @client_users.kana_first_name %>
            </td>
          </tr>
          <tr>
            <th class="text-right">郵便番号：</th>
            <td>
              <%= @client_users.postal_code %>
            </td>
          </tr>
          <tr>
            <th class="text-right">住所：</th>
            <td>
              <%= @client_users.address %>
            </td>
          </tr>
          <tr>
            <th class="text-right">電話番号：</th>
            <td>
              <%= @client_users.tel %>
            </td>
          </tr>
          <tr>
            <th class="text-right">メールアドレス：</th>
            <td>
              <%= @client_users.email %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-6">
      <tr>
      <h4>登録情報</h4>
      <%=link_to("編集する", edit_client_user_path, class: "btn btn-primary") %>
        <h4>パスワード変更</h4>
        <%=link_to("変更する", edit_client_user_registration_path ,class: "btn btn-success") %>
      </tr>
      <h4>配送先</h4>
      <%=link_to("一覧を見る", client_user_addresses_path(current_client_user.id), class: "btn btn-primary") %>
      <h4>注文履歴</h4>
      <%=link_to("一覧を見る", client_user_orders_path(current_client_user.id), class: "btn btn-primary") %>
    </div>
</div>