
<div class ="container">

	<h1>登録情報編集</h1>
	<div class="col-xs-6">
		<%= form_with(model:[@client_user], local: true) do |f| %>
			<table>
				<tr>
					<td>名前</td>
					<td>(姓)</td>
					<td><%= f.text_field  :family_name %></td>
					<td>(名)</td>
					<td><%= f.text_field  :first_name %></td>
				</tr>
				<tr>
					<td>フリガナ</td>
					<td>(セイ)</td>
					<td><%= f.text_field  :kana_family_name %></td>
					<td>(メイ)</td>
					<td><%= f.text_field  :kana_first_name %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td></td>
					<td><%= f.text_field  :email %></td>
					<td></td>
					<td></td>
				</tr>
				<tr>
					<td>郵便番号(ハイフンなし)</td>
					<td></td>
					<td><%= f.text_field  :postal_code %></td>
					<td></td>
					<td></td>
				</tr>
				<tr>
					<td>住所</td>
					<td></td>
					<td><%= f.text_field  :address %></td>
					<td></td>
					<td></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td></td>
					<td><%= f.text_field  :tel %></td>
					<td></td>
					<td></td>
				</tr>
				<tr>
					<td><%= f.submit "変更する", class: "btn btn-primary" %></td>
					<td></td>
					<td></td>
					<td></td>
					<td colspan="2"><%=link_to("退会する", client_user_withdrawal_path(current_client_user.id), class: "btn-sm btn-danger") %></td>
				</tr>
			</table>
		<% end %>
	</div>
</div>
